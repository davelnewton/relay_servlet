<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!-- Relay -->

    <servlet>
        <servlet-name>RelayServlet</servlet-name>
        <servlet-class>relay.RelayServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RelayServlet</servlet-name>
        <url-pattern>/RelayServlet</url-pattern>
    </servlet-mapping>

    <!-- Select animal -->

    <servlet>
        <servlet-name>SelectAnimalServlet</servlet-name>
        <servlet-class>relay.SelectAnimalServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectAnimalServlet</servlet-name>
        <url-pattern>/SelectAnimalServlet</url-pattern>
    </servlet-mapping>
</web-app>
